	<h1 style="color:black ; margin-bottom:3%; margin-top:3%; text-align:center;">Kelime Düzenleme</h1>
	
    <form class="form-inline justify-content-center mb-3" method="post" asp-page-handler="GetKelimeByName">
        <input class="form-control" placeholder="Aranacak kelime" asp-for="Kelime.KelimeAdi" type="search" />
        <button class="btn btn-primary" type="submit">Ara</button>
    </form>

    <form method="post" asp-page-handler="Form">
        <div class="form-group">
            <label>Kelime</label>
            <input type="text" class="form-control" placeholder="Kelime" asp-for="Kelime.KelimeAdi">
            <small class="form-text text-muted">Kelimeyi doğru yazmaya özen gösteriniz.</small>
        </div>
        <div class="form-group">
            <label>Anlamı</label>
            <input type="text" class="form-control" placeholder="Anlamı" asp-for="Kelime.Anlam">
        </div>
        <div class="form-group">
            <label>Köken</label>
            <input type="text" class="form-control" placeholder="Dil" asp-for="Kelime.Dil">
        </div>
        <div class="form-group">
            <label>Örnek</label>
            <input type="text" class="form-control" placeholder="Örnek" asp-for="Kelime.Ornek">
            <small class="form-text text-muted">İçerisinde kelimenin bulunduğu örnek bir cümle yazınız.</small>
        </div>
        <button type="submit" class="btn btn-primary" asp-page-handler="UpdateKelime">Düzenle</button>
        <button type="submit" class="btn btn-primary" asp-page-handler="SilKelimeByName">Sil</button>

    </form>
	
